CÃ³digo do nosso Banco de Dados

create DATABASE if not exists Acai;
show databases;
use Acai;
create table if not exists Usuario(
idUsuario int primary key auto_increment,
nome varchar(50) not null,
email varchar(50) not null, 
cpf varchar(30) not null,
senha varchar(20) not null,
adm boolean not null
);
create table if not exists Endereco(
idUsuario int primary key,
rua varchar(100) not null,
bairro varchar(30) not null,
numero varchar(10) not null,
cep varchar(30) not null,
foreign key (idUsuario) references Usuario(idUsuario)
);
create table Produto(
idProduto int primary key auto_increment,
nomeProduto varchar(30) not null,
preco varchar(30) not null,
entrada int not null,
saida int not null
);

alter table Produto
add saldo INTEGER;

alter table Produto
drop column entrada,
drop column saida;

create table Movimento(
idMovimento int primary key auto_increment,
idProduto int not null,
preco double(8, 2) not null,
quantidade int not null,
eEntrada boolean not null,
foreign key (idProduto) references Produto(idProduto)
);

show tables;
describe Usuario;
describe Endereco;
describe Produto;
describe Movimento;

SELECT * FROM usuario;
SELECT * FROM endereco;

insert into Usuario(nome, email, cpf, senha, adm)
values ('Guilherme', 'admin', '12312312318', 'admin', true); 
insert into Produto(nomeProduto, preco, entrada, saida)
values ('BOMBRUSH CYBERFUNK', 9999999999, 0, 0);
insert into Movimento(idProduto, preco, quantidade, eEntrada)
values (3, 78, 2, true);

SELECT * FROM Usuario;
    
